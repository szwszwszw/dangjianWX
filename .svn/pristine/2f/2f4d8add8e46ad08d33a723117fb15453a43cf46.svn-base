.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
}

.image {
  height: 40vh;
  width: 750rpx;
}

.icon {
  height: 50rpx;
  width: 50rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.line {
  height: 2rpx;
  background-color: #ccc;
}

.inline {
  display: flex;
  flex-direction: row;
}

.input {
  margin-left: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.border {
  border: 2rpx solid #ccc;
  width: 700rpx;
  margin-top: 70rpx;
}

.button {
  width: 600rpx;
  margin-top: 50rpx;
}

.nav-default {
  color: #b3aeae;
}

.nav-hover {
  color: red;
}

.nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx 50rpx 0rpx 50rpx;
}

.end {
  color: red;
  font-size: 30rpx;
  margin-top: 150rpx;
}

