  background-color: #eee;
}

.image {
  height: 40vh;
  width: 100%;
}

.bgimage {
  height: 20vh;
  width: 100%;
}

.user-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}

.touxiang {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name {
  color: #fff;
}

.topline {
  width: 100%;
  height: 2px;
  background-color: #ccc;
  margin-bottom: 20rpx;
}

.botline {
  width: 100%;
  height: 2px;
  background-color: #ccc;
  margin-top: 20rpx;
}

.nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.imgtext {
  display: flex;
  flex-direction: row;
}

.navgator {
  background-color: #fff;
  margin-top: 20rpx;
}
