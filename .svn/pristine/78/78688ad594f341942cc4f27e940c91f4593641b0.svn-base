<view class='container' wx:for="{{detailList}}" wx:key="" wx:if="{{item.id==detailId}}">
  <view class='title'>{{item.title}}</view>
  <view>
    <image class='image' src='{{item.imagePath}}'></image>
  </view>
  <view class='content'><text decode='true'>&emsp;&emsp;{{item.content}}</text></view>
  <view class='date'>{{item.date}}</view>
  </view>