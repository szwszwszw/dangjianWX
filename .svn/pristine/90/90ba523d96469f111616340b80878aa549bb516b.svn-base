.title {
  font-size: 70rpx;
  font-weight: bold;
  color: red;
  text-align: center;
  margin-bottom: 30rpx;
}

.image {
  width: 300rpx;
  height: 300rpx;
}

.text {
  margin: 30rpx 0rpx 0rpx 30rpx;
}

.border {
  border: 2rpx solid #ccc;
  border-right-color: #fff;
  border-left-color: #fff;
}

.line {
  height: 2rpx;
  background-color: #ccc;
}

.button {
  margin: 60rpx 80rpx 0rpx 80rpx;
}

.input {
  display: inline-flex;
}
