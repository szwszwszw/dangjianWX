<view wx:for="{{detailList}}" wx:key="" wx:if="{{item.id==detailId}}">
  <view class='container'>
    <view class='title'>{{item.title}}</view>
    <view>
      <image class='image' src='{{item.imagePath}}'></image>
    </view>
    <view class='content'>
      <text decode='true'>&emsp;&emsp;{{item.content}}</text>
    </view>
  </view>
  <view class='about'>
    <view>{{item.author}}</view>
    <view>{{item.date}}</view>
  </view>
</view>