<view>
  <!--背景图片-->
  <view>
    <image class='bgimg' src='../../images/study.jpg'></image>
  </view>

  <view class='con'>

    <view class='options'>
      <!--题目-->
      <view class='text'>
        <text decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{postList[index].question}}</text>
      </view>
      <!--选项-->
      <button class='option' id='A' bindtap='btnOption' style='background-color:{{colorA}};text-align:left'>{{postList[index].option[0]}}</button>

      <button class='option' id='B' bindtap='btnOption' style='background-color:{{colorB}};text-align:left'>{{postList[index].option[1]}}</button>

      <button class='option' id='C' bindtap='btnOption' style='background-color:{{colorC}};text-align:left'>{{postList[index].option[2]}}</button>

      <button class='option' id='D' bindtap='btnOption' style='background-color:{{colorD}};text-align:left'>{{postList[index].option[3]}}</button>

      <button class='nextbtn' type='primary' bindtap='nextQuestion'>下一题</button>
    </view>

  </view>
</view>